<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yupi.springbootinit.mapper.ChartFavourMapper">

    <resultMap id="BaseResultMap" type="com.yupi.springbootinit.model.entity.ChartFavour">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="chartId" column="chartId" jdbcType="BIGINT"/>
        <result property="userId" column="userId" jdbcType="BIGINT"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,chartId,userId,
        createTime,updateTime
    </sql>

    <select id="listFavourChartByPage"
            resultType="com.yupi.springbootinit.model.entity.Chart">
        select p.*
        from chart p
                 join (select chartId from chart_favour where userId = #{favourUserId}) pf
                      on p.id = pf.chartId ${ew.customSqlSegment}
    </select>
</mapper>
